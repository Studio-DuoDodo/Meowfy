<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_marginVertical="10dp">
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/image_library"
        android:src="@drawable/ic_baseline_add_24"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:padding="30dp"
        android:background="@color/primaryLight1"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/title_library"
        android:layout_toRightOf="@id/image_library"
        android:layout_alignParentTop="true"
        android:layout_marginTop="15dp"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:layout_marginLeft="10dp"
        tools:text="nom"
        android:layout_marginStart="10dp"
        android:textSize="20sp"/>

    <TextView
        android:id="@+id/subtitle_library"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/title_library"
        android:layout_toEndOf="@+id/image_library"
        android:layout_toRightOf="@+id/image_library"
        android:textColor="@color/primaryLight2"
        android:layout_marginLeft="10dp"
        tools:text="subtitle"
        android:layout_marginStart="10dp"
        android:layout_marginTop="5dp"/>
</RelativeLayout>