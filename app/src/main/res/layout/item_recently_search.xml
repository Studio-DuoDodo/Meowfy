<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="10dp"
    xmlns:tools="http://schemas.android.com/tools">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/image_search"
        android:src="@drawable/launcher_screen"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        tools:padding="15dp"
        tools:background="@color/primaryLight1"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/title_search"
        android:layout_toRightOf="@id/image_search"
        android:layout_alignParentTop="true"
        android:layout_marginTop="5dp"
        android:textColor="@color/white"
        android:layout_marginLeft="10dp"
        tools:text="nom"
        android:layout_marginStart="10dp"
        android:textSize="15sp"
        android:layout_toEndOf="@id/image_search" />

    <TextView
        android:id="@+id/subtitle_search"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/title_search"
        android:layout_toEndOf="@+id/image_search"
        android:layout_toRightOf="@+id/image_search"
        android:textColor="@color/primaryLight2"
        android:layout_marginLeft="10dp"
        tools:text="subtitle"
        android:layout_marginStart="10dp"/>

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/delete_search"
        android:layout_alignParentRight="true"
        android:layout_centerInParent="true"
        android:src="@drawable/ic_baseline_close_24"
        android:background="@color/primary"
        android:layout_alignParentEnd="true" />
</RelativeLayout>